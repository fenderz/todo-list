.sections

    &__item
        padding: 10px
        background: $color_mint
        box-sizing: border-box
        display: inline-block
        vertical-align: top
        border-radius: 5px
        font-weight: 500
        font-size: 14px
        margin: 0 2% 2% 0
        width: 32%
        color: $color_dark
        @extend .animateFadeIn
        animation-delay: 0.3s;

        &:nth-child(3n+3)
            margin-right: 0

        &_female
            background: $color_pink

            & ^[0]__title::after
                background: $color_mint

        &_done
            opacity: 0.5

    &__title
        background: $color_white
        padding: 10px 30px
        border-radius: 3px
        color: $color_dark
        cursor: pointer
        margin-bottom: 10px
        position: relative
        text-overflow: ellipsis
        overflow: hidden
        white-space: nowrap
        font: 500 14px/1.1 $fontRoboto
        change-props: margin

        &::before
            content: ''
            display: block
            width: 0
            height: 0
            position: absolute
            left: 10px
            top: 50%
            margin-top: -5px
            border-style: solid;
            border-width: 5px 0 5px 10px;
            border-color: transparent transparent transparent $color_gray
            transform: rotate(90deg)
            change-props: transform

        &::after
            content: attr(data-todo-id)
            display: inline-block
            position: absolute
            right: 10px
            top: 50%
            margin-top: -10px
            min-width: 14px
            height: 20px
            padding: 0 4px
            border-radius: 2px
            background: $color_pink
            color: $color_white
            font: 300 13px/20px $fontRoboto
            text-align: center

    &__title_open
        margin-bottom: 0

        &:before
            transform: rotate(0)

        & + .sections__description
                visibility: hidden
                opacity: 0
                max-height: 0

    &__description
        font: 300 13px/1.3 $fontRoboto
        color: $color_white
        margin-bottom: 8px
        padding-left: 10px

/* media query */
@media $media_mobile

    .sections

        &__item
            width: 100%
            margin-right: 0

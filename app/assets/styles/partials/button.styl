.button
    background: $color_pink
    padding: 20px
    min-width: 300px
    display inline-block
    border-color: transparent
    border-radius: 5px
    cursor: pointer
    color: $color_white
    font: 300 28px/1.2 $fontRoboto
    text-decoration none
    @extend .animateBottom
    animation-delay: 0.6s;

